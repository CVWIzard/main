<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/last_files_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/cvv1"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/last_files_title"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/last_files_image"
        android:layout_toEndOf="@id/last_files_image"
        android:layout_height="wrap_content"
        android:text="SAMPLETEXTM8"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/last_files_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_files_title"
        android:text="DATE 00/00/00"
        android:textSize="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#008000"
        android:layout_marginLeft="65dp"/>

    <LinearLayout
        android:id="@+id/last_files_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_alignTop="@+id/last_files_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:background="@drawable/welcome_screen_edittext_corner"
            android:src="@mipmap/edit"/>
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share"
            android:scaleType="centerCrop"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:background="@drawable/welcome_screen_edittext_corner"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:background="@drawable/welcome_screen_edittext_corner"
            android:src="@mipmap/delete"/>
    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
