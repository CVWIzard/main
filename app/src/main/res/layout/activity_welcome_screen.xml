<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dollarphotoclub"
    tools:context="com.example.pavel.cvwizard.WelcomeScreen">

    <android.support.v7.widget.FitWindowsFrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/cardview_dark_background"

        >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dollarphotoclub"
            android:alpha="0.2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <com.example.customViews.StyledTextView
            android:id="@+id/welcomeTextStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:text="Welcome to"
            android:textSize="48sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />

            <com.example.customViews.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/welcomeTextStart"
                android:text="CV.Wizard"
                android:textSize="48sp"
                android:textColor="@color/pager_topic"
                android:layout_marginLeft="20dp"
                />
            <com.example.customViews.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/welcomeTextStart"
                android:text="@string/welcome_text"
                android:textSize="48sp"
                android:textColor="@color/cardview_light_background"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>



        <Button
            android:id="@+id/startBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/welcome_screen_edittext_corner"
            android:text="@string/generate_file_button"
            android:textSize="20dp"
            android:textColor="@color/cardview_light_background"
            />

        <com.example.customViews.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_light_background"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:text="Sign up"

            />

    </android.support.v7.widget.FitWindowsFrameLayout>







</android.support.constraint.ConstraintLayout>
