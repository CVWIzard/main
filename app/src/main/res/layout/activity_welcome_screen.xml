<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dollarphotoclub"
    tools:context="com.cvwizard.WelcomeScreen">

    <android.support.v7.widget.FitWindowsFrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/cardview_dark_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@drawable/dollarphotoclub" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cvwizard.customViews.StyledTextView
                android:id="@+id/welcomeTextStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Welcome to"
                android:textColor="@color/cardview_light_background"
                android:textSize="48sp" />

            <com.cvwizard.customViews.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/welcomeTextStart"
                android:layout_marginLeft="20dp"
                android:text="CV.Wizard"
                android:textColor="@color/pager_topic"
                android:textSize="48sp" />

            <com.cvwizard.customViews.StyledTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/welcomeTextStart"
                android:layout_marginLeft="20dp"
                android:text="@string/welcome_text"
                android:textColor="@color/cardview_light_background"
                android:textSize="48sp" />

        </LinearLayout>


        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp"
            android:background="@drawable/signin_default"
            />

        <com.cvwizard.customViews.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"
            android:text="Sign in without social account (not available)"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="16dp"

            />

    </android.support.v7.widget.FitWindowsFrameLayout>


</android.support.constraint.ConstraintLayout>
